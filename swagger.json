{
  "openapi": "3.0.0",
  "info": {
    "title": "Rest API com MongoDB",
    "description": "Uma API de testes com o objetivo de integrar métodos com o MongoDB",
    "termsOfService": "http://localhost:3000/terms",
    "contact": {
      "email": "matheusspasti@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/v1",
      "description": "API para testes"
    }
  ],
  "paths": {
    "/products": {
      "post": {
        "summary": "Cadastro de produtos",
        "description": "Rota responsável por cadastrar novos produtos",
        "tags": ["Products"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Products"
              },
              "examples": {
                "product": {
                  "value": {
                    "name": "Iphone 15",
                    "price": 5000.0,
                    "quantity": 15
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "401": {
          "description": "Unauthorized"
        },
        "400": {
          "description": "Product Already Exists!"
        },
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "items": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Products": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          }
        }
      }
    }
  }
}
